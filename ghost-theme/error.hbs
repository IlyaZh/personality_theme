{{!< default}}

{{!-- Error page template - inherits from default.hbs --}}
<div class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto text-center">
        <!-- Error Icon -->
        <div class="mb-12">
            <div class="w-24 h-24 mx-auto bg-gradient-to-br from-red-500 to-pink-500 rounded-full flex items-center justify-center shadow-lg">
                <i class="fas fa-exclamation-triangle text-4xl text-white"></i>
            </div>
        </div>

        <!-- Error Code -->
        <h1 class="text-6xl md:text-8xl font-bold text-base-content mb-6">
            {{statusCode}}
        </h1>

        <!-- Error Message -->
        <h2 class="text-xl md:text-2xl font-semibold text-base-content mb-8">
            {{message}}
        </h2>

        <!-- Error Description -->
        <p class="text-lg text-base-content/70 mb-8 max-w-2xl mx-auto">
            {{#if code}}
                {{#is "404"}}
                    The page you're looking for doesn't exist. It might have been moved, deleted, or you entered the wrong URL.
                {{else}}
                    {{#is "500"}}
                        Something went wrong on our end. We're working to fix this issue. Please try again later.
                    {{else}}
                        {{#is "403"}}
                            You don't have permission to access this page. Please check your credentials and try again.
                        {{else}}
                            An unexpected error occurred. Please try again or contact support if the problem persists.
                        {{/is}}
                    {{/is}}
                {{/is}}
            {{else}}
                An unexpected error occurred. Please try again or contact support if the problem persists.
            {{/if}}
        </p>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-16">
            <a href="{{@site.url}}" class="btn btn-primary">
                <i class="fas fa-home mr-2"></i>
                Go Home
            </a>
            <a href="{{@site.url}}/blog/" class="btn btn-outline">
                <i class="fas fa-blog mr-2"></i>
                Browse Blog
            </a>
            <button onclick="history.back()" class="btn btn-ghost">
                <i class="fas fa-arrow-left mr-2"></i>
                Go Back
            </button>
        </div>

        <!-- Search Section -->
        <div class="max-w-md mx-auto">
            <h3 class="text-lg font-semibold text-base-content mb-4">Looking for something specific?</h3>
            <button class="btn btn-outline btn-lg" data-ghost-search>
                <i class="fas fa-search mr-2"></i>
                Search Posts
            </button>
        </div>

        <!-- Recent Posts Section -->
        {{#get "posts" limit="3" as |recent_posts|}}
        {{#if recent_posts}}
        <div class="mt-20">
            <h3 class="text-2xl font-semibold text-base-content mb-8">Recent Posts</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {{#foreach recent_posts}}
                <article class="card bg-base-200 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    {{#if feature_image}}
                    <figure class="h-48">
                        <img src="{{img_url feature_image size="m"}}" alt="{{title}}" class="w-full h-full object-cover">
                    </figure>
                    {{else}}
                    <figure class="h-48 bg-gradient-to-br from-primary to-secondary flex items-center justify-center">
                        <i class="fas fa-file-alt text-4xl text-white opacity-50"></i>
                    </figure>
                    {{/if}}
                    <div class="card-body">
                        <h4 class="card-title text-base">
                            <a href="{{url}}" class="hover:text-primary transition-colors">{{title}}</a>
                        </h4>
                        <p class="text-sm text-base-content/70 line-clamp-2">{{excerpt words="15"}}</p>
                        <div class="card-actions justify-end">
                            <a href="{{url}}" class="btn btn-primary btn-sm">Read More</a>
                        </div>
                    </div>
                </article>
                {{/foreach}}
            </div>
        </div>
        {{/if}}
        {{/get}}
    </div>
</div>


