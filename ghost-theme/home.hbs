                    </svg>
                </div>
                <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
                    <li><a href="{{@site.url}}">Home</a></li>
                    <li><a href="{{@site.url}}/blog/">All Posts</a></li>
                    <li><a href="{{@site.url}}/tag/blog/">Blog</a></li>
                    <li><a href="{{@site.url}}/tag/growth/">Growth</a></li>
                    <li><a href="{{@site.url}}/tag/projects/">Projects</a></li>
                    <li><a href="{{@site.url}}/tag/thoughts/">Thoughts</a></li>
                </ul>
            </div>
            <a href="{{@site.url}}" class="btn btn-ghost text-xl font-bold">{{@site.title}}</a>
        </div>
        
        <div class="navbar-center hidden lg:flex">
            <ul class="menu menu-horizontal px-1">
                <li><a href="{{@site.url}}" class="hover:text-primary">Home</a></li>
                <li><a href="{{@site.url}}/blog/" class="hover:text-primary">All Posts</a></li>
                <li>
                    <details>
                        <summary class="hover:text-primary">Categories</summary>
                        <ul class="p-2 bg-base-100 rounded-t-none">
                            <li><a href="{{@site.url}}/tag/blog/">Blog</a></li>
                            <li><a href="{{@site.url}}/tag/growth/">Growth</a></li>
                            <li><a href="{{@site.url}}/tag/projects/">Projects</a></li>
                            <li><a href="{{@site.url}}/tag/thoughts/">Thoughts</a></li>
                        </ul>
                    </details>
                </li>
            </ul>
        </div>
        
        <div class="navbar-end">
            <button class="btn btn-ghost btn-circle" id="theme-toggle">
                <i class="fas fa-moon text-xl" id="theme-icon"></i>
            </button>
        </div>
    </div>

    <!-- Hero Section -->
    <section class="hero min-h-[40vh] bg-gradient-to-r from-indigo-600 to-purple-600 text-white">
        <div class="hero-content text-center">
            <div class="max-w-md">
                <h1 class="text-5xl font-bold mb-4">My Blog</h1>
                <p class="text-xl mb-6">Sharing experience, knowledge and thoughts about software development</p>
                <div class="stats stats-horizontal bg-white/10 backdrop-blur-sm text-white">
                    <div class="stat">
                        <div class="stat-title text-white/70">Posts</div>
                        <div class="stat-value text-white">{{pagination.total}}</div>
                    </div>
                    <div class="stat">
                        <div class="stat-title text-white/70">Categories</div>
                        <div class="stat-value text-white">4</div>
                    </div>
                    <div class="stat">
                        <div class="stat-title text-white/70">Authors</div>
                        <div class="stat-value text-white">{{authors.length}}</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Category Filters -->
    <section class="py-8 bg-base-200">
        <div class="container mx-auto px-4">
            <div class="flex flex-wrap justify-center gap-4">
                <a href="{{@site.url}}/blog/" class="btn btn-primary">
                    <i class="fas fa-list mr-2"></i>
                    All Posts
                </a>
                <a href="{{@site.url}}/tag/blog/" class="btn btn-outline">
                    <i class="fas fa-newspaper mr-2"></i>
                    Blog
                </a>
                <a href="{{@site.url}}/tag/growth/" class="btn btn-outline">
                    <i class="fas fa-chart-line mr-2"></i>
                    Growth
                </a>
                <a href="{{@site.url}}/tag/projects/" class="btn btn-outline">
                    <i class="fas fa-tools mr-2"></i>
                    Projects
                </a>
                <a href="{{@site.url}}/tag/thoughts/" class="btn btn-outline">
                    <i class="fas fa-lightbulb mr-2"></i>
                    Thoughts
                </a>
            </div>
        </div>
    </section>

    <!-- Blog Posts -->
    <section class="py-20 bg-base-100">
        <div class="container mx-auto px-4">
            {{#if posts}}
            <div class="grid lg:grid-cols-3 md:grid-cols-2 gap-8">
                {{#foreach posts visibility="public"}}
                <article class="card bg-base-100 shadow-xl card-hover">
                    {{#if feature_image}}
                    <figure class="px-6 pt-6">
                        <img src="{{img_url feature_image size="m"}}" alt="{{title}}" class="w-full h-48 object-cover rounded-xl">
                    </figure>
                    {{else}}
                    <figure class="px-6 pt-6">
                        <div class="w-full h-48 bg-gradient-to-br from-slate-600 to-slate-700 rounded-xl flex items-center justify-center">
                            {{#has tag="blog"}}
                                <i class="fas fa-newspaper text-4xl text-white"></i>
                            {{/has}}
                            {{#has tag="growth"}}
                                <i class="fas fa-chart-line text-4xl text-white"></i>
                            {{/has}}
                            {{#has tag="projects"}}
                                <i class="fas fa-tools text-4xl text-white"></i>
                            {{/has}}
                            {{#has tag="thoughts"}}
                                <i class="fas fa-lightbulb text-4xl text-white"></i>
                            {{/has}}
                            {{#unless tags}}
                                <i class="fas fa-file-alt text-4xl text-white"></i>
                            {{/unless}}
                        </div>
                    </figure>
                    {{/if}}
                    <div class="card-body">
                        <div class="flex items-center justify-between mb-2">
                            {{#if tags}}
                            <div class="flex gap-2">
                                {{#foreach tags limit="2" visibility="public"}}
                                {{#if @first}}
                                <div class="badge badge-primary">{{name}}</div>
                                {{else}}
                                <div class="badge badge-outline">{{name}}</div>
                                {{/if}}
                                {{/foreach}}
                            </div>
                            {{/if}}
                            <time class="text-sm text-base-content/60" datetime="{{date format="YYYY-MM-DD"}}">
                                {{date format="MMM DD, YYYY"}}
                            </time>
                        </div>
                        <h2 class="card-title">
                            <a href="{{url}}" class="hover:text-primary">{{title}}</a>
                        </h2>
                        <p class="text-base-content/70 line-clamp-3">{{excerpt words="20"}}</p>
                        <div class="card-actions justify-between items-center mt-4">
                            <div class="flex items-center">
                                {{#if primary_author.profile_image}}
                                <div class="avatar">
                                    <div class="w-6 h-6 rounded-full">
                                        <img src="{{img_url primary_author.profile_image size="xs"}}" alt="{{primary_author.name}}">
                                    </div>
                                </div>
                                {{/if}}
                                <span class="text-sm text-base-content/60 ml-2">{{primary_author.name}}</span>
                                <span class="text-sm text-base-content/40 mx-2">•</span>
                                <span class="text-sm text-base-content/60">{{reading_time}}</span>
                            </div>
                            <a href="{{url}}" class="btn btn-primary btn-sm">Read More</a>
                        </div>
                    </div>
                </article>
                {{/foreach}}
            </div>

            {{!-- Pagination --}}
            {{#if pagination}}
            <div class="flex justify-center mt-16">
                <div class="join">
                    {{#if pagination.prev}}
                    <a href="{{page_url pagination.prev}}" class="join-item btn">«</a>
                    {{else}}
                    <button class="join-item btn btn-disabled">«</button>
                    {{/if}}
                    
                    {{#foreach pagination.pages}}
                    {{#if current}}
                    <button class="join-item btn btn-active">{{page}}</button>
                    {{else}}
                    <a href="{{page_url page}}" class="join-item btn">{{page}}</a>
                    {{/if}}
                    {{/foreach}}
                    
                    {{#if pagination.next}}
                    <a href="{{page_url pagination.next}}" class="join-item btn">»</a>
                    {{else}}
                    <button class="join-item btn btn-disabled">»</button>
                    {{/if}}
                </div>
            </div>
            {{/if}}

            {{else}}
            <div class="text-center py-20">
                <i class="fas fa-file-alt text-6xl text-base-content/30 mb-4"></i>
                <h3 class="text-2xl font-bold text-base-content mb-2">No posts yet</h3>
                <p class="text-base-content/70">Check back soon for new content!</p>
            </div>
            {{/if}}
        </div>
    </section>

    <!-- Newsletter Section -->
