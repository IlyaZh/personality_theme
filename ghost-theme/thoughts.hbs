{{!< default}}

{{!-- Microblog template for thoughts category --}}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-3xl mx-auto">
        
        {{!-- Page Header --}}
        <header class="text-center mb-12">
            <h1 class="text-4xl font-bold text-base-content mb-4">Thoughts Microblog</h1>
            <p class="text-lg text-base-content/70">Short thoughts and reflections</p>
        </header>

        {{!-- Posts List --}}
        <div class="space-y-8">
            {{#if posts}}
                {{#foreach posts}}
                <article class="border-b border-base-300 pb-8 last:border-b-0">
                
                {{!-- Post Header --}}
                <div class="flex items-center justify-between mb-4">
                    <time class="text-sm text-base-content/60" datetime="{{date format="YYYY-MM-DD"}}">
                        {{date format="MMM DD, YYYY"}}
                    </time>
                    {{#if tags}}
                    <div class="flex gap-2">
                        {{#foreach tags limit="3" visibility="public"}}
                        <div class="badge badge-outline badge-sm">{{name}}</div>
                        {{/foreach}}
                    </div>
                    {{/if}}
                </div>

                {{!-- Post Title --}}
                <h2 class="text-2xl font-bold text-base-content mb-4">
                    <a href="{{url}}" class="hover:text-primary transition-colors">{{title}}</a>
                </h2>

                {{!-- Post Content --}}
                <div class="prose prose-lg max-w-none mb-6">
                    {{content}}
                </div>

                {{!-- Post Footer --}}
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        {{#if primary_author.profile_image}}
                        <div class="avatar">
                            <div class="w-8 h-8 rounded-full">
                                <img src="{{img_url primary_author.profile_image size="xs"}}" alt="{{primary_author.name}}">
                            </div>
                        </div>
                        {{else}}
                        <div class="avatar">
                            <div class="w-8 h-8 rounded-full bg-gradient-to-br from-primary to-secondary flex items-center justify-center">
                                <i class="fas fa-user text-white text-sm"></i>
                            </div>
                        </div>
                        {{/if}}
                        <span class="text-sm text-base-content/70 ml-3">{{primary_author.name}}</span>
                    </div>
                    <a href="{{url}}" class="btn btn-outline btn-sm">
                        Read More
                        <i class="fas fa-arrow-right ml-1"></i>
                    </a>
                </div>
            </article>
                {{/foreach}}
            {{else}}
                <div class="text-center py-12">
                    <div class="text-6xl mb-4">ðŸ¤”</div>
                    <h3 class="text-xl font-semibold mb-2">No thoughts yet</h3>
                    <p class="text-base-content/70 mb-4">There are no posts with the "thoughts" tag yet.</p>
                    <a href="{{@site.url}}/blog/" class="btn btn-primary">Browse All Posts</a>
                </div>
            {{/if}}
        </div>

        {{!-- Pagination --}}
        {{#if pagination}}
        {{#if pagination.pages}}
        <div class="flex justify-center items-center mt-16">
            <div class="join">
                <!-- Previous Button -->
                {{#if pagination.prev}}
                <a href="{{page_url pagination.prev}}" class="join-item btn btn-outline" title="Previous page" rel="prev">
                    <i class="fas fa-chevron-left mr-1"></i>
                    <span class="hidden sm:inline">Previous</span>
                </a>
                {{else}}
                <button class="join-item btn btn-disabled" title="No previous page">
                    <i class="fas fa-chevron-left mr-1"></i>
                    <span class="hidden sm:inline">Previous</span>
                </button>
                {{/if}}
                
                <!-- Previous page number -->
                {{#if pagination.prev}}
                <a href="{{page_url pagination.prev}}" class="join-item btn btn-outline">{{pagination.prev}}</a>
                {{/if}}
                
                <!-- Current page -->
                <button class="join-item btn btn-primary" aria-current="page">{{pagination.page}}</button>
                
                <!-- Next page number -->
                {{#if pagination.next}}
                <a href="{{page_url pagination.next}}" class="join-item btn btn-outline">{{pagination.next}}</a>
                {{/if}}
                
                <!-- Next Button -->
                {{#if pagination.next}}
                <a href="{{page_url pagination.next}}" class="join-item btn btn-outline" title="Next page" rel="next">
                    <span class="hidden sm:inline">Next</span>
                    <i class="fas fa-chevron-right ml-1"></i>
                </a>
                {{else}}
                <button class="join-item btn btn-disabled" title="No next page">
                    <span class="hidden sm:inline">Next</span>
                    <i class="fas fa-chevron-right ml-1"></i>
                </button>
                {{/if}}
            </div>
        </div>
        {{/if}}
        {{/if}}

    </div>
</div>
