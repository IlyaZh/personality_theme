{
    "name": "ilia-zhitenev-theme",
    "description": "Custom Ghost theme with static homepage and blog at /blog",
    "demo": "https://iliazhitenev.dev",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.png",
        "mobile": "assets/screenshot-mobile.png"
    },
    "author": {
        "name": "Ilia Zhitenev",
        "email": "me@iliazhitenev.dev",
        "url": "https://iliazhitenev.dev"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Personal",
            "Portfolio"
        ]
    },
    "keywords": [
        "ghost-theme",
        "ghost",
        "theme",
        "minimal",
        "portfolio",
        "blog",
        "responsive"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/IlyaZh/personal_website_2.0.git"
    },
    "config": {
        "posts_per_page": 10,
        "image_sizes": {
            "xs": {
                "width": 150
            },
            "s": {
                "width": 400
            },
            "m": {
                "width": 750
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1140
            },
            "xxl": {
                "width": 1920
            }
        },
        "card_assets": {
            "exclude": []
        },
        "custom": {
            "show_featured_posts": {
                "type": "boolean",
                "default": true,
                "group": "blog"
            },
            "show_author_bio": {
                "type": "boolean",
                "default": true,
                "group": "posts"
            },
            "show_reading_time": {
                "type": "boolean",
                "default": true,
                "group": "posts"
            },
            "show_share_buttons": {
                "type": "boolean",
                "default": true,
                "group": "posts"
            },
            "show_related_posts": {
                "type": "boolean",
                "default": true,
                "group": "posts"
            },
            "show_announcement_bar": {
                "type": "boolean",
                "default": true,
                "group": "header"
            },
            "show_search": {
                "type": "boolean",
                "default": true,
                "group": "header"
            },
            "show_resume_button": {
                "type": "boolean",
                "default": true,
                "group": "header"
            },
            "show_social_links": {
                "type": "boolean",
                "default": true,
                "group": "footer"
            },
            "personal_photo": {
                "type": "image"
            },
            "personal_name": {
                "type": "string",
                "default": "Enter your name here"
            }
        }
    },
    "scripts": {
        "build:css": "tailwindcss -i ./src/screen.css -o ./assets/css/screen.css --watch",
        "build:css-prod": "tailwindcss -i ./src/screen.css -o ./assets/css/screen.css --minify",
        "dev": "npm run build:css",
        "build": "npm run build:css-prod"
    },
    "devDependencies": {
        "@tailwindcss/typography": "^0.5.16",
        "daisyui": "^4.12.24",
        "tailwindcss": "^3.4.17"
    }
}
