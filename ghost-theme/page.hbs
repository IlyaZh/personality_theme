{{!< default}}

{{!-- Page template - inherits from default.hbs --}}
{{#page}}
<article class="container mx-auto px-4 py-8 max-w-4xl">
    <!-- Breadcrumbs -->
    <div class="breadcrumbs text-sm mb-6">
        <ul>
            <li><a href="{{@site.url}}" class="hover:text-primary">Home</a></li>
            <li>{{title}}</li>
        </ul>
    </div>

    <!-- Page Meta -->
    {{#if @page.show_title_and_feature_image}}
    <div class="mb-8">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 text-base-content">{{title}}</h1>
        
        <div class="flex items-center gap-4 text-base-content/60 mb-6">
            {{#if primary_author.profile_image}}
            <div class="avatar">
                <div class="w-10 h-10 rounded-full">
                    <img src="{{img_url primary_author.profile_image size="s"}}" alt="{{primary_author.name}}">
                </div>
            </div>
            {{/if}}
            <div>
                <div class="font-semibold text-base-content">{{primary_author.name}}</div>
                <div class="text-sm">
                    <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM DD, YYYY"}}</time>
                    {{#if updated_at}}
                    <span class="mx-2">•</span>
                    <span>Updated {{date updated_at format="MMM DD, YYYY"}}</span>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>

    <!-- Featured Image -->
    {{#if feature_image}}
    <figure class="mb-8">
        <img src="{{img_url feature_image size="xl"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" class="w-full rounded-xl shadow-lg">
        {{#if feature_image_caption}}
        <figcaption class="text-center text-sm text-base-content/60 mt-2">{{feature_image_caption}}</figcaption>
        {{/if}}
    </figure>
    {{/if}}
    {{else}}
    <!-- Fallback: always show title and feature image if @page setting is not available -->
    <div class="mb-8">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 text-base-content">{{title}}</h1>
        
        <div class="flex items-center gap-4 text-base-content/60 mb-6">
            {{#if primary_author.profile_image}}
            <div class="avatar">
                <div class="w-10 h-10 rounded-full">
                    <img src="{{img_url primary_author.profile_image size="s"}}" alt="{{primary_author.name}}">
                </div>
            </div>
            {{/if}}
            <div>
                <div class="font-semibold text-base-content">{{primary_author.name}}</div>
                <div class="text-sm">
                    <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM DD, YYYY"}}</time>
                    {{#if updated_at}}
                    <span class="mx-2">•</span>
                    <span>Updated {{date updated_at format="MMM DD, YYYY"}}</span>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>

    <!-- Featured Image -->
    {{#if feature_image}}
    <figure class="mb-8">
        <img src="{{img_url feature_image size="xl"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" class="w-full rounded-xl shadow-lg">
        {{#if feature_image_caption}}
        <figcaption class="text-center text-sm text-base-content/60 mt-2">{{feature_image_caption}}</figcaption>
        {{/if}}
    </figure>
    {{/if}}
    {{/if}}

    <!-- Page Content -->
    <div class="prose prose-lg max-w-none text-base-content">
        {{{content}}}
    </div>

    <!-- Page Footer -->
    <div class="mt-12 pt-8 border-t border-base-300">
        <!-- Share Buttons -->
        <div class="flex flex-wrap gap-4 justify-center">
            <a href="https://twitter.com/intent/tweet?text={{encode title}}&url={{url absolute="true"}}" target="_blank" class="btn btn-outline">
                <i class="fab fa-twitter mr-2"></i>Share on Twitter
            </a>
            <a href="https://www.linkedin.com/sharing/share-offsite/?url={{url absolute="true"}}" target="_blank" class="btn btn-outline">
                <i class="fab fa-linkedin mr-2"></i>Share on LinkedIn
            </a>
            <button onclick="navigator.share ? navigator.share({title: '{{title}}', url: window.location.href}) : navigator.clipboard.writeText(window.location.href).then(() => alert('Link copied!'))" class="btn btn-outline">
                <i class="fas fa-share mr-2"></i>Share
            </button>
        </div>
    </div>
</article>
{{/page}}